@model Celular

@{
    ViewData["Title"] = "Detalhes do Celular";
}

<h2 class="text-center mb-4">🚗 Detalhes do Celular</h2>

<div class="car-details-card p-4">
    <ul class="car-info-list">
        <li><strong>Marca:</strong> @Model.Marca</li>
        <li><strong>Modelo:</strong> @Model.Modelo</li>
        <li><strong>Preço:</strong> R$ @Model.Preco</li>
    </ul>
</div>

<a asp-action="Index" class="btn-back">⬅️ Voltar</a>

<style>
    h2 {
        font-size: 30px;
        font-weight: bold;
        color: #E65100;
    }

    .car-details-card {
        background: linear-gradient(135deg, #FF9800, #F57C00, #E65100);
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        padding: 30px;
        max-width: 500px;
        margin: 0 auto;
        color: white;
        font-weight: 500;
    }

    .car-info-list li {
        font-size: 20px;
        margin-bottom: 12px;
        padding: 8px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    }

        .car-info-list li:last-child {
            border-bottom: none;
        }

    .btn-back {
        display: block;
        width: 220px;
        text-align: center;
        background: #E65100;
        color: white;
        padding: 14px;
        font-size: 18px;
        border-radius: 25px;
        transition: all 0.3s ease;
        text-decoration: none;
        margin: 25px auto 0;
        font-weight: bold;
    }

        .btn-back:hover {
            background: #BF360C;
            transform: scale(1.05);
        }
</style>
