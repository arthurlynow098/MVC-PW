@model Celular

@{
    ViewData["Title"] = "Cadastrar Celular";
}

<h2 class="text-orange fw-bold text-center">Cadastrar Novo Celular</h2>

<form asp-action="Cadastrar" method="post" class="shadow-lg p-4 rounded bg-white">
    <div class="mb-3">
        <label class="form-label fw-bold text-dark">Marca</label>
        <input asp-for="Marca" class="form-control" placeholder="Digite a marca" required />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold text-dark">Modelo</label>
        <input asp-for="Modelo" class="form-control" placeholder="Digite o modelo" required />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold text-dark">Preço</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" placeholder="Digite o preço" required />
    </div>
    <div class="text-center mt-4">
        <button type="submit" class="btn btn-orange btn-lg">💾 Salvar</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">❌ Cancelar</a>
    </div>
</form>

<style>
    .text-orange {
        color: #ff7f00;
    }

    .btn-orange {
        background: linear-gradient(90deg, #ff7f00, #ff4500);
        color: white;
        padding: 12px 24px;
        border-radius: 25px;
        transition: 0.3s;
        font-weight: bold;
        border: none;
    }

        .btn-orange:hover {
            background: linear-gradient(90deg, #ff4500, #ff7f00);
            transform: scale(1.05);
        }

    .shadow-lg {
        max-width: 600px;
        margin: auto;
        background: #f8f9fa;
        border-radius: 10px;
    }
</style>
