@model List<Evento>

@{
    ViewData["Title"] = "Gerenciamento de Evento";
}

<h2 class="text-dark fw-semibold">Gerenciamento de Eventos</h2>
<a asp-action="Cadastrar" class="btn btn-modern mb-3">➕ Adicionar Evento</a>
<a asp-action="GerarPDF" class="btn btn-pdf mb-3">📄 Gerar PDF</a>
<table class="table custom-table shadow rounded">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome do Evento</th>
            <th>Local do Evento</th>
            <th>Data do Evento</th>
            <th>Data De Preparo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Evento in Model)
        {
            <tr>
                <td>@Evento.Id</td>
                <td>@Evento.Nome</td>
                <td>@Evento.Local</td>
                <td>@Evento.Data.ToString("dd/MM/yyyy")</td>
                <td>@Evento.DataDePreparacao.ToString("dd/MM/yyyy")</td>
                <td class="text-center">
                    <a asp-action="Visualizar" asp-route-id="@Evento.Id" class="btn btn-view">🔍</a>
                    <a asp-action="Editar" asp-route-id="@Evento.Id" class="btn btn-edit">✏️</a>
                    <a asp-action="Excluir" asp-route-id="@Evento.Id" class="btn btn-delete">🗑</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-pdf {
        background: linear-gradient(90deg, #ff0000, #cc0000);
        color: white;
        padding: 10px 20px;
        border-radius: 20px;
        transition: 0.3s;
        text-decoration: none;
        font-weight: bold;
    }

        .btn-pdf:hover {
            background: linear-gradient(90deg, #cc0000, #ff0000);
            transform: scale(1.05);
        }
    .btn-modern {
        background: linear-gradient(90deg, #ff7b00, #ff5500);
        color: white;
        padding: 10px 20px;
        border-radius: 20px;
        transition: 0.3s;
        text-decoration: none;
        font-weight: bold;
    }

        .btn-modern:hover {
            background: linear-gradient(90deg, #ff5500, #ff7b00);
            transform: scale(1.05);
        }

    .custom-table {
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
        background: white;
        border-radius: 10px;
        overflow: hidden;
    }

        .custom-table thead {
            background: #ff7b00;
            color: white;
        }

        .custom-table th, .custom-table td {
            padding: 12px;
            text-align: center;
        }

    .btn-view {
        background: #17a2b8;
        color: white;
        padding: 6px 10px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-edit {
        background: #ffc107;
        color: white;
        padding: 6px 10px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
        padding: 6px 10px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-view:hover, .btn-edit:hover, .btn-delete:hover {
            opacity: 0.8;
        }
</style>
