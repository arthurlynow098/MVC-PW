@model List<Carro>

@{
    ViewData["Title"] = "Gerenciamento de Carros";
}

<h2 class="text-dark fw-semibold">Gerenciamento de Carros</h2>
<a asp-action="Cadastrar" class="btn btn-modern mb-3">➕ Adicionar Carro</a>
<a asp-action="GerarPDF" class="btn btn-pdf mb-3">📄 Gerar PDF</a>

<table class="table custom-table shadow rounded">
    <thead>
        <tr>
            <th>ID</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Ano</th>
            <th>Preço</th>
            <th>Data de Fabricação</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var carro in Model)
        {
            <tr>
                <td>@carro.Id</td>
                <td>@carro.Marca</td>
                <td>@carro.Modelo</td>
                <td>@carro.Ano</td>
                <td>R$ @carro.Preco.ToString("N2")</td>
                <td>@carro.DataFabricacao.ToString("dd/MM/yyyy")</td>
                <td class="text-center">
                    <a asp-action="Visualizar" asp-route-id="@carro.Id" class="btn btn-view">🔍</a>
                    <a asp-action="Editar" asp-route-id="@carro.Id" class="btn btn-edit">✏️</a>
                    <a asp-action="Excluir" asp-route-id="@carro.Id" class="btn btn-delete">🗑</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-modern {
        background: linear-gradient(90deg, #ff7b00, #ff5500);
        color: white;
        padding: 10px 20px;
        border-radius: 20px;
        transition: 0.3s;
        text-decoration: none;
        font-weight: bold;
    }

        .btn-modern:hover {
            background: linear-gradient(90deg, #ff5500, #ff7b00);
            transform: scale(1.05);
        }

    .btn-pdf {
        background: linear-gradient(90deg, #ff0000, #cc0000);
        color: white;
        padding: 10px 20px;
        border-radius: 20px;
        transition: 0.3s;
        text-decoration: none;
        font-weight: bold;
    }

        .btn-pdf:hover {
            background: linear-gradient(90deg, #cc0000, #ff0000);
            transform: scale(1.05);
        }

    .custom-table {
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
        background: white;
        border-radius: 10px;
        overflow: hidden;
    }

        .custom-table thead {
            background: #ff7b00;
            color: white;
        }

        .custom-table th, .custom-table td {
            padding: 12px;
            text-align: center;
        }

    .btn-view {
        background: #17a2b8;
        color: white;
        padding: 6px 10px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-edit {
        background: #ffc107;
        color: white;
        padding: 6px 10px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
        padding: 6px 10px;
        border-radius: 5px;
        text-decoration: none;
    }

        .btn-view:hover, .btn-edit:hover, .btn-delete:hover {
            opacity: 0.8;
        }
</style>
